pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from GitHub
                git 'https://github.com/skarthiselvaraj/Jenkins-Zero-To-Hero'
            }
        }
        stage('Compile Java') {
            steps {
                // Compile the Java program
                sh 'javac new-folder/HelloWorld.java'
            }
        }
        stage('Run Java') {
            steps {
                // Run the Java program
                sh 'java -cp new-folder HelloWorld'
            }
        }
    }
}
